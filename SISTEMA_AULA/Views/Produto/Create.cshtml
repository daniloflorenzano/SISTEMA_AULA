@model SISTEMA_AULA.MODEL.Models.Produto

<h4>Produto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         
            <div class="form-group">
                <label asp-for="ProCodigoBarras" class="control-label"></label>
                <input asp-for="ProCodigoBarras" class="form-control" />
                <span asp-validation-for="ProCodigoBarras" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProDescricao" class="control-label"></label>
                <input asp-for="ProDescricao" class="form-control" />
                <span asp-validation-for="ProDescricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProDataCadastro" class="control-label"></label>
                <input asp-for="ProDataCadastro" class="form-control" />
                <span asp-validation-for="ProDataCadastro" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ProDesativado" /> @Html.DisplayNameFor(model => model.ProDesativado)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="ProCodigoTipoProduto" class="control-label"></label>
                <select asp-for="ProCodigoTipoProduto" class="form-select" asp-items="@ViewBag.TiposProduto"></select>
                <span asp-validation-for="ProCodigoTipoProduto" class="text-danger"></span>
            </div>

          
            <div class="form-group">
                <label asp-for="ProCodigoUnidade" class="control-label"></label>
                <select asp-for="ProCodigoUnidade" class="form-select" asp-items="@ViewBag.Unidades"></select>
                <span asp-validation-for="ProCodigoUnidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

